generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id            String   @id
  shop          String
  state         String
  isOnline      Boolean  @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean  @default(false)
  locale        String?
  collaborator  Boolean? @default(false)
  emailVerified Boolean? @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Settings {
  id                  String   @id @default(cuid())
  shop                String   @unique

  upsellMode          String   @default("collection")
  manualVariantIds    String   @default("")
  fallbackVariantIds  String   @default("")
  limit               Int      @default(3)
  excludeGiftCards    Boolean  @default(false)
  excludeOutOfStock   Boolean  @default(false)
  redirectToCart      Boolean  @default(true)

  // AI Recommendations
  aiEnabled           Boolean  @default(false)
  aiMonthlyLimit      Int      @default(1000)
  aiCallsThisMonth    Int      @default(0)
  aiUsageMonth        String   @default("")
  aiFallbackMode      String   @default("collection")
  aiMessageText       String   @default("Based on your browsing, we think you'll love these")
  fallbackMessageText String   @default("You might also like")

  // Localization
  widgetLocale        String?

  // Widget timing / trigger
  triggerType         String   @default("time")
  triggerDelaySec     Int      @default(20)

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model WidgetEvent {
  id              String   @id @default(cuid())
  shop            String
  type            String
  sessionId        String?
  path            String?
  productHandle    String?
  currentVariant   String?
  upsellVariant    String?
  count            Int?
  trigger          String?
  analyticsAllowed Boolean?
  meta             String   @default("{}")
  createdAt        DateTime @default(now())

  @@index([shop, createdAt])
  @@index([shop, type, createdAt])
}
