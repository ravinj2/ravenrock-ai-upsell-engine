// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Settings {
  id                  String   @id @default(cuid())
  shop                String   @unique
  upsellMode          String   @default("collection")
  manualVariantIds    String   @default("")
  fallbackVariantIds  String   @default("")
  limit               Int      @default(3)
  excludeGiftCards    Boolean  @default(false)
  excludeOutOfStock   Boolean  @default(false)
  redirectToCart      Boolean  @default(true)
  
  // AI Recommendations
  aiEnabled           Boolean  @default(false)
  aiMonthlyLimit      Int      @default(1000)
  aiCallsThisMonth    Int      @default(0)
  aiUsageMonth        String   @default("") // bijv. "2026-02" voor maand-reset
  aiFallbackMode      String   @default("collection")
  aiMessageText       String   @default("Based on your browsing, we think you'll love these")
  fallbackMessageText String   @default("You might also like")
  
  // Localization
  widgetLocale        String?  // null = auto (use shop locale)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
